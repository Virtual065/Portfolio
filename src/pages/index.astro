          <p class="reveal text-[var(--text-secondary)] text-base max-w-xl mx-auto">The programming languages in my toolkit</p>
        </div>
        <div class="stagger-group flex flex-wrap justify-center gap-4 mb-12">
          {languages.map((lang) => (
            <div class={`stagger-item px-6 py-3 rounded-full font-mono text-base border-2 transition-all duration-300 cursor-default
              ${lang.level === 'primary'
                ? 'bg-[var(--accent)] border-[var(--accent)] text-white'
                : lang.level === 'secondary'
                ? 'bg-transparent border-[var(--accent-light)] text-[var(--accent-light)]'
                : 'bg-transparent border-[var(--text-muted)] text-[var(--text-muted)]'
              }`}>
              {lang.name}
            </div>
          ))}
        </div>
        <div class="reveal flex flex-wrap justify-center gap-8 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 rounded-full bg-[var(--accent)]"></div>
            <span class="text-[var(--text-secondary)]">Primary</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 rounded-full border-2 border-[var(--accent-light)]"></div>
            <span class="text-[var(--text-secondary)]">Proficient</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 rounded-full border-2 border-[var(--text-muted)]"></div>
            <span class="text-[var(--text-secondary)]">Learning</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Code Showcase -->
    <section class="min-h-screen flex items-center justify-center px-6 py-20 bg-[var(--bg-primary)]">
      <div class="w-full max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="reveal text-4xl md:text-5xl font-bold mb-4">Code <span class="text-[var(--accent-light)]">Samples</span></h2>
          <p class="reveal text-[var(--text-secondary)] text-base max-w-xl mx-auto">A glimpse into how I write code</p>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {codeSnippets.map((snippet) => (
            <div class="reveal group">
              <div class="flex items-center justify-between px-4 py-3 bg-[var(--bg-tertiary)]/80 backdrop-blur-sm rounded-t-xl border border-b-0 border-[var(--bg-tertiary)] group-hover:border-[var(--accent)] transition-colors">
                <div class="flex items-center gap-3">
                  <div class="flex gap-1.5">
                    <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
                    <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
                    <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
