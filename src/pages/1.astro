---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import WhatIDo from '../components/WhatIDo.astro';
---

<Layout title="Background 1 - Gradient">
  <div class="fixed inset-0 -z-10 bg-gradient-to-br from-[#0a0a0f] via-[#162840] to-[#0a0a0f]"></div>
  <div class="fixed top-20 left-1/4 w-[500px] h-[500px] bg-[#1e3a5f]/30 rounded-full blur-[120px] -z-10"></div>
  <div class="fixed bottom-20 right-1/4 w-[400px] h-[400px] bg-[#2d5a8a]/25 rounded-full blur-[100px] -z-10"></div>

  <div class="fixed top-4 left-4 z-50 bg-black/80 px-4 py-2 rounded-lg border border-white/20">
    <span class="text-white font-mono text-sm">1/5 - Gradient + Glow Orbs</span>
  </div>

  <Hero name="Thomas Yates" tagline="Game Developer & Junior Software Engineer" />
  <WhatIDo />
</Layout>
