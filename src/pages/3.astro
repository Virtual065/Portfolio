---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import WhatIDo from '../components/WhatIDo.astro';
---

<Layout title="Background 3 - Grid">
  <div class="grid-bg fixed inset-0 -z-10"></div>
  <div class="fixed inset-0 -z-10 bg-gradient-to-b from-transparent via-[#0a0a0f]/50 to-[#0a0a0f]"></div>
  <div class="fixed top-1/3 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-[#1e3a5f]/20 rounded-full blur-[100px] -z-10"></div>

  <div class="fixed top-4 left-4 z-50 bg-black/80 px-4 py-2 rounded-lg border border-white/20">
    <span class="text-white font-mono text-sm">3/5 - Grid Pattern</span>
  </div>

  <Hero name="Thomas Yates" tagline="Game Developer & Junior Software Engineer" />
  <WhatIDo />
</Layout>

<style is:global>
  .grid-bg {
    background-color: #0a0a0f;
    background-image:
      linear-gradient(rgba(30, 58, 95, 0.4) 1px, transparent 1px),
      linear-gradient(90deg, rgba(30, 58, 95, 0.4) 1px, transparent 1px);
    background-size: 60px 60px;
  }
</style>
