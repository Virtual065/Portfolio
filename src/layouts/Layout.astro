---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Game Developer Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet" />
    <style>
      @font-face {
        font-family: 'OpenDyslexic';
        src: url('https://cdn.jsdelivr.net/gh/antijingoist/opendyslexic@master/compiled/OpenDyslexic-Regular.otf') format('opentype');
        font-weight: normal;
      }
      @font-face {
        font-family: 'OpenDyslexic';
        src: url('https://cdn.jsdelivr.net/gh/antijingoist/opendyslexic@master/compiled/OpenDyslexic-Bold.otf') format('opentype');
        font-weight: bold;
      }
    </style>
    <title>{title}</title>
  </head>
  <body>
    <!-- Dyslexic Mode Toggle -->
    <div id="dyslexic-container" class="inline-flex items-center gap-3 px-4 rounded-full bg-white/10 backdrop-blur-sm border-2 border-white/30 w-auto" style="position: fixed; top: 1rem; left: 1rem; z-index: 9999; padding-top: 6px; padding-bottom: 6px;">
      <span class="text-white text-sm whitespace-nowrap">Dyslexic</span>
      <div id="dyslexic-toggle" class="dyslexic-toggle" title="Toggle Dyslexic Font">
        <div class="toggle-thumb"></div>
      </div>
    </div>

    <slot />
    <script>
      import { gsap } from 'gsap';
      import { ScrollTrigger } from 'gsap/ScrollTrigger';

      gsap.registerPlugin(ScrollTrigger);

      // Reveal animations on scroll
      document.querySelectorAll('.reveal').forEach((el) => {
        gsap.fromTo(el,
          { opacity: 0, y: 30 },
          {
            opacity: 1,
            y: 0,
            duration: 0.8,
            ease: 'power3.out',
            scrollTrigger: {
              trigger: el,
              start: 'top 85%',
              toggleActions: 'play none none none'
            }
          }
        );
      });

      // Clip reveal animations
      document.querySelectorAll('.clip-reveal').forEach((el) => {
        gsap.fromTo(el,
          { clipPath: 'inset(100% 0 0 0)' },
          {
            clipPath: 'inset(0% 0 0 0)',
            duration: 1,
            ease: 'power3.out',
            scrollTrigger: {
              trigger: el,
              start: 'top 85%',
              toggleActions: 'play none none none'
            }
          }
        );
      });

      // Stagger animations for groups
      document.querySelectorAll('.stagger-group').forEach((group) => {
        const items = group.querySelectorAll('.stagger-item');
        gsap.fromTo(items,
          { opacity: 0, y: 20 },
          {
            opacity: 1,
            y: 0,
            duration: 0.6,
            stagger: 0.1,
            ease: 'power3.out',
            scrollTrigger: {
              trigger: group,
              start: 'top 85%',
              toggleActions: 'play none none none'
            }
          }
        );
      });
    </script>
  </body>
</html>

<style is:global>
  /* Code font family */
  .font-mono {
    font-family: 'JetBrains Mono', monospace;
  }

  /* Dyslexic toggle */
  .dyslexic-toggle {
    width: 44px;
    height: 24px;
    border-radius: 9999px;
    border: 2px solid white;
    background: transparent;
    cursor: pointer;
    padding: 3px;
  }
  .dyslexic-toggle .toggle-thumb {
    width: 14px;
    height: 14px;
    border-radius: 9999px;
    background: white;
    transition: transform 0.3s ease;
  }
  /* Dyslexic mode */
  body.dyslexic-mode,
  body.dyslexic-mode * {
    font-family: 'OpenDyslexic', sans-serif !important;
  }
  body.dyslexic-mode code,
  body.dyslexic-mode pre {
    font-family: 'JetBrains Mono', monospace !important;
  }
  /* Toggle switch active state */
  body.dyslexic-mode .dyslexic-toggle {
    background: var(--accent);
    border-color: var(--accent);
  }
  body.dyslexic-mode .dyslexic-toggle .toggle-thumb {
    transform: translateX(18px);
  }
</style>

<script is:inline>
  // Dyslexic mode toggle
  const toggle = document.getElementById('dyslexic-toggle');

  // Check for saved preference
  if (localStorage.getItem('dyslexic-mode') === 'true') {
    document.body.classList.add('dyslexic-mode');
  }

  toggle.addEventListener('click', () => {
    document.body.classList.toggle('dyslexic-mode');
    const isDyslexic = document.body.classList.contains('dyslexic-mode');
    localStorage.setItem('dyslexic-mode', isDyslexic);
  });
</script>
