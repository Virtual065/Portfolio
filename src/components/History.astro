            <div class="absolute left-8 md:left-1/2 w-4 h-4 bg-[var(--accent)] rounded-full -translate-x-1/2 border-4 border-[var(--bg-secondary)] z-10"></div>

            <!-- Content card -->
            <div class={`ml-16 md:ml-0 md:w-[calc(50%-2rem)] p-6 rounded-xl bg-[var(--bg-tertiary)] border border-[var(--bg-tertiary)] hover:border-[var(--accent)] transition-all duration-300 ${index % 2 === 0 ? 'md:mr-auto md:text-right' : 'md:ml-auto md:text-left'}`}>
              <div class={`flex items-center gap-3 mb-3 ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
                <span class="text-3xl">{milestone.icon}</span>
                <span class="text-[var(--accent-light)] font-mono text-base">{milestone.year}</span>
              </div>
              {milestone.link ? (
                <a href={milestone.link} target="_blank" rel="noopener noreferrer" class="text-2xl font-semibold mb-2 block hover:text-[var(--accent-light)] transition-colors">
                  {milestone.title} â†—
                </a>
              ) : (
                <h3 class="text-2xl font-semibold mb-2">{milestone.title}</h3>
              )}
              <p class="text-[var(--text-secondary)] text-base">{milestone.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
