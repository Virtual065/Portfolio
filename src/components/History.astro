<section class="min-h-screen flex items-center justify-center px-6 py-20" id="history">
  <div class="w-full max-w-3xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="reveal text-4xl md:text-5xl font-bold mb-4">
        My <span class="text-[var(--accent-light)]">Journey</span>
      </h2>
      <p class="reveal text-[var(--text-secondary)] text-base max-w-xl mx-auto">
