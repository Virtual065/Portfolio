---
interface Props {
  email?: string;
  github?: string;
}

const { email = "your@email.com", github = "yourusername" } = Astro.props;
---

<section class="px-6 py-24" id="contact">
  <div class="w-full max-w-2xl mx-auto text-center">
    <h2 class="reveal text-4xl md:text-5xl font-bold mb-4">
      Let's <span class="text-[var(--accent-light)]">Connect</span>
    </h2>
    <p class="reveal text-[var(--text-secondary)] text-base max-w-xl mx-auto mb-12">
      Interested in working together or just want to chat? Feel free to reach out.
    </p>

    <div class="stagger-group flex flex-col sm:flex-row justify-center gap-4">
      <a
        href={`mailto:${email}`}
        class="stagger-item inline-flex items-center justify-center gap-3 px-8 py-4 rounded-full border-2 border-[var(--accent)] text-[var(--accent-light)] hover:bg-[var(--accent)] hover:text-white transition-all duration-300"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <span class="font-mono">Email</span>
      </a>

      <a
        href={`https://github.com/${github}`}
        target="_blank"
        rel="noopener noreferrer"
        class="stagger-item inline-flex items-center justify-center gap-3 px-8 py-4 rounded-full border-2 border-[var(--accent)] text-[var(--accent-light)] hover:bg-[var(--accent)] hover:text-white transition-all duration-300"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span class="font-mono">GitHub</span>
      </a>
    </div>
  </div>
</section>

<footer class="py-12 px-6 bg-[var(--bg-primary)] border-t-2 border-[var(--accent)]/50">
  <div class="max-w-2xl mx-auto text-center">
    <p class="text-[var(--text-secondary)] text-sm mb-4">This website was built with</p>
    <div class="flex flex-wrap justify-center gap-3 mb-4">
      <span class="px-3 py-1 rounded-full bg-[var(--bg-secondary)] text-[var(--accent-light)] text-sm font-mono">Astro</span>
      <span class="px-3 py-1 rounded-full bg-[var(--bg-secondary)] text-[var(--accent-light)] text-sm font-mono">TypeScript</span>
      <span class="px-3 py-1 rounded-full bg-[var(--bg-secondary)] text-[var(--accent-light)] text-sm font-mono">Tailwind CSS</span>
      <span class="px-3 py-1 rounded-full bg-[var(--bg-secondary)] text-[var(--accent-light)] text-sm font-mono">GSAP</span>
    </div>
    <p class="text-[var(--text-muted)] text-xs font-mono mb-6">
      Statically generated with Astro & hosted on GitHub Pages
    </p>
    <a href="https://github.com/Virtual065/Portfolio" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-[var(--accent)] text-[var(--accent-light)] hover:bg-[var(--accent)] hover:text-white transition-all duration-300 text-sm">
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
      </svg>
      <span class="font-mono">View Source</span>
    </a>
  </div>
</footer>
